<%- include('../navbar') %>

<body>
      <div class="container" style="margin-top: 100px;">
        <% if (vidio.length > 0) { %>
            <h2 style="text-align: center;">Video Categori <%= vidio[0].name_category_traning %></h2>

        <% } else { %>

        <% } %>
    </div>
    <style>
      .card {
        max-width: 18rem;
        height: 300px; 
      }
    
      .card video {
        width: 100%;
        height: 70%;
        object-fit: cover;
      }
    </style>
    
    <div class="container" >
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% vidio.forEach(vidio => { %>
          <div class="col">
            <div class="card">
              <video src="<%= vidio.vidio %>" class="card-img-top img-fluid" controls></video>
              <div class="card-body">
                <h5 class="card-title"><%= vidio.name_vidio %></h5>
                <p class="card-title"><%= vidio.deskripsi %></p>
                
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
